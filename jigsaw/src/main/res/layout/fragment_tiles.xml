<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="io.puzzlebox.jigsaw.ui.TilesFragment">

    <!-- Input Devices -->
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:textColor="#505050"
              android:textStyle="bold"
              android:textSize="12sp"
              android:text="@string/label_device_input_select" />

    <!-- Carousel -->
    <HorizontalScrollView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:scrollbars="none">

        <!-- Input Devices Carousel items container - lays out items horizontally -->
        <LinearLayout android:id="@+id/carousel_devices_input"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"/>

    </HorizontalScrollView>

    <!-- Output Devices -->
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:textColor="#505050"
              android:textStyle="bold"
              android:textSize="12sp"
              android:text="@string/label_device_output_select" />

    <!-- Carousel -->
    <HorizontalScrollView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:scrollbars="none">

        <!-- Input Devices Carousel items container - lays out items horizontally -->
        <LinearLayout android:id="@+id/carousel_devices_output"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"/>

    </HorizontalScrollView>

    <!-- Device Profile -->
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:textColor="#505050"
              android:textStyle="bold"
              android:textSize="12sp"
              android:text="@string/label_device_profile_select" />

    <!-- Carousel -->
    <HorizontalScrollView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:scrollbars="none">

        <!-- Input Devices Carousel items container - lays out items horizontally -->
        <LinearLayout android:id="@+id/carousel_device_profile"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"/>

    </HorizontalScrollView>

</LinearLayout>

