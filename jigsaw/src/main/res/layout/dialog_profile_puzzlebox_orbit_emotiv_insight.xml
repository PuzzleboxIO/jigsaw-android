                    android:layout_marginStart="8dp"
                    android:text="@string/label_puzzlebox_orbit_emotiv_insight_sensor_pz"/>

                <ImageView
                    android:id="@+id/imageViewEmotivInsightSensorPz"
                    android:layout_width="wrap_content"
