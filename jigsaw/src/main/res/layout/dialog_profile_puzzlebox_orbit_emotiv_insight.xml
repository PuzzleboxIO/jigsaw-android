            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                style="@style/DialogStyle"
                android:text="@string/label_puzzlebox_orbit_emotiv_insight_instruction" />


            <!--<ImageView-->
                <!--android:id="@+id/imageViewLogoBrand"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="78dp"-->
                <!--android:contentDescription="@string/image_description_brand"-->
                <!--android:maxHeight="20dp"-->
                <!--android:src="@drawable/logo_brand"-->
                <!--/>-->

            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:contentDescription="@string/image_description_status"
                android:maxHeight="20dp"
                android:src="@drawable/status_default"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewLabelScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/padding_medium"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:text="@string/textview_label_score"/>

                        <TextView
                            android:id="@+id/textViewScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/padding_medium"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:text="@string/textview_score"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
