                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="@string/label_puzzlebox_orbit_emotiv_insight_sensor_cms"/>

                <ImageView
                    android:id="@+id/imageViewEmotivInsightSensorCMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/label_puzzlebox_orbit_emotiv_insight_sensor_cms"
                    android:maxHeight="18dp"
                    android:maxWidth="18dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/device_eeg_sensor_cms_white"/>

