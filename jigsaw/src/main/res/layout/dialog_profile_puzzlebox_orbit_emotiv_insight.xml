                <Button
                    android:id="@+id/buttonTrainNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rounded_corners_grey"
                    android:text="@string/button_puzzlebox_orbit_emotiv_insight_training_neutral_untrained"
                    android:visibility="visible"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBarTrainNeutral"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:paddingStart="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_medium"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textViewLabelTrainMentalCommand"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingLeft="@dimen/padding_medium"
                    android:paddingRight="@dimen/padding_medium"
                    android:text="@string/label_puzzlebox_orbit_emotiv_insight_training_mental_command"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <!--android:layout_toLeftOf="@id/buttonTrainNeutral"-->

                <Button
                    android:id="@+id/buttonTrainMentalCommand"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rounded_corners_grey"
                    android:text="@string/button_puzzlebox_orbit_emotiv_insight_training_mental_command_untrained"
                    android:visibility="visible"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


