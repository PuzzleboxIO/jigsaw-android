    <!--</RelativeLayout>-->

    <RelativeLayout
        android:id="@+id/bodySelect"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#ededed"
        android:orientation="horizontal" >
        <!--android:layout_below="@+id/topbar"-->

        <io.puzzlebox.jigsaw.data.CustomSpinner
            android:id="@+id/spinnerAction"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btClearData"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:layout_centerVertical="true"
            android:text="Clear"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reProcess"
        android:layout_width="match_parent"
        android:layout_below="@+id/bodySelect"
        android:layout_above="@+id/footer"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imgBox"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bgbox" />

        <ProgressBar
            android:id="@+id/ProgressBarpower"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/progressBarTime"
            android:background="#22000000"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:progressDrawable="@drawable/training_vertical_progressbar" />

        <ProgressBar
            android:id="@+id/progressBarTime"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:background="#22000000"
            android:progressDrawable="@drawable/training_horizontal_progressbar" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:background="#2d2d2d" >

        <Button
            android:id="@+id/btstartTraing"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/training_border"
            android:enabled="true"
            android:text="Train"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>