            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutX10Dimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/buttonStatusPuzzleboxGimmickX10Dim"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rounded_corners_grey"
                    android:maxLines="1"
                    android:text="@string/buttonStatusPuzzleboxGimmickX10Dim"/>

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/buttonStatusPuzzleboxGimmickX10Bright"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rounded_corners_grey"
                    android:maxLines="1"
                    android:text="@string/buttonStatusPuzzleboxGimmickX10Bright"
                    android:paddingStart="@dimen/padding_medium"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >


                <ImageView
                    android:id="@+id/imageViewPuzzleboxGimmick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
