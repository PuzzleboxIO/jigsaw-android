                <!--/>-->

                <!--style="@style/button_text"-->
                <Button
                    android:id="@+id/buttonStatusPuzzleboxGimmickX10Off"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rounded_corners_grey"
                    android:maxLines="1"
                    android:text="@string/buttonStatusPuzzleboxGimmickX10Off"/>
                <!--android:paddingLeft="@dimen/padding_medium"-->

                <android.support.v4.widget.Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <Button
                    android:id="@+id/buttonStatusPuzzleboxGimmickX10On"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_rounded_corners_grey"
